<div class="container_registro">
        <div class="header">
            <h2>Crear cuenta</h2>
        </div>
        <form id="formuser" class="form">
            <div class="form-control">
                <label for="username">Usuario</label>
                <input type="text" placeholder="Nombre de Usuario" id="username" />
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error</small>
            </div>
            <div class="form-control">
                <label for="email">Email</label>
                <input type="email" id="signup-email" class="form-control"
                placeholder="Email" required />
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error de mensaje</small>
            </div>
            <div class="form-control">
                <label for="password">Contrase√±a</label>
                <input  type="password" id="signup-pass" class="form-control"
                placeholder="Password" required/>
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error </small>
            </div>
            <button type="submit">Enviar</button>
        </form>
</div>
